{
  "manifest_version": 3,
  "name": "ASMR.one Download Manager",
  "version": "2.0",
  "description": "Download manager for ASMR.one (React + Vite)",
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://asmr.one/*",
    "*://www.asmr.one/*",
    "*://api.asmr-200.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.jsx-BwhkD7PB.js"
      ],
      "matches": [
        "*://asmr.one/*",
        "*://www.asmr.one/*"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ASMR.one Download Manager"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://asmr.one/*",
        "*://www.asmr.one/*"
      ],
      "resources": [
        "assets/index.jsx-BwhkD7PB.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
